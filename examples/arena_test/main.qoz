import "std:mem"
import str "std:strings"

main := func() {
    arena := mem.arena_make(1024)
    alloc := mem.arena_allocator(&arena)

    word1 := "Hello, "
    word2 := "Arena!"
    greeting := str.string_concat(word1, word2, alloc)
    println(greeting)

    word3 := "Works "
    word4 := "perfectly!"
    message := str.string_concat(word3, word4, alloc)
    println(message)

    mem.arena_free(&arena)
}
