Point := struct { x: f64, y: f64 }
Circle := struct { radius: f64 }

Shape := union {
    Point,
    Circle,
    f64
}

foo := func(s: Shape) {
    println("Received a Shape value")
}

main := func() {
    point := Point{x: 1.0, y: 2.0}
    circle := Circle{radius: 5.0}
    
    foo(point)
    foo(circle)
    foo(3.14)
}