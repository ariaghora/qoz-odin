import rl "vendor:raylib"

main := func() {
    title := "Raylib Test"
    title_ptr := title.data as *i8
    
    rl.init_window(800, 600, title_ptr)
    defer rl.close_window()

    skyblue := rl.Color{r: 135, g: 206, b: 235, a: 255}
    red := rl.Color{r: 255, g: 0, b: 0, a: 255}
    
    while !rl.window_should_close() {
        rl.begin_drawing()
        rl.clear_background(skyblue)
        rl.draw_circle(400, 300, 100.0, red)
        rl.end_drawing()
    }
    
    filename := "screenshot.png"
    filename_ptr := filename.data as *i8
    rl.take_screenshot(filename_ptr)
}