import "std:mem"

Point := struct { x: f64, y: f64 }
Line := struct { start: Point, end: Point }

main := func() {
    // Primitives
    println("Integer:", 42)
    println("Float:", 3.14)
    println("Bool:", true)
    println("String:", "hello")
    
    // Arrays
    numbers := arr<i32, 3>{1, 2, 3}
    println("Array:", numbers)
    
    // Vecs
    arena := mem.arena_make(1024)
    defer mem.arena_free(&arena)
    alloc := mem.arena_allocator(&arena)
    v := new(vec<i32>, alloc)
    defer del(v)
    append(v, 10)
    append(v, 20)
    append(v, 30)
    println("Vec:", v)
    
    // Structs
    p := Point{x: 5.0, y: 10.0}
    println("Point:", p)
    
    // Nested structs
    line := Line{start: Point{x: 0.0, y: 0.0}, end: Point{x: 1.0, y: 1.0}}
    println("Line:", line)
    
    // Array of structs
    points := arr<Point, 2>{Point{x: 1.0, y: 2.0}, Point{x: 3.0, y: 4.0}}
    println("Points array:", points)
    
    // Pointer
    ptr := &p
    println("Pointer:", ptr)
}

