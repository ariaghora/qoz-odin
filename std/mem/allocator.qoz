import "std:libc"

Allocator := struct {
    data:  *void,
    alloc: func(*void, i64): *void,
}

default_alloc_proc := func(data: *void, size: i64): *void {
    return libc.malloc(size)
}

default_allocator := func(): Allocator {
    return Allocator{
        data: nil,
        alloc: default_alloc_proc,
    }
}