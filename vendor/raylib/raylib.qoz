link "./libraylib.a"
link "framework:IOKit"
link "framework:Cocoa"
link "framework:OpenGL"

Image := struct {
    data:    *void,
    width:   i32,
    height:  i32,
    mipmaps: i32,
    format:  i32,
}

Rectangle := struct {
    x: f32,
    y: f32,
    width: f32,
    height: f32,
}

Texture := struct {
    foo:     i32
    width:   i32,
    height:  i32,
    mipmaps: i32,
    format:  i32
}

Vector2 := struct {
    x: f32,
    y: f32,
}

Color := struct { r: i8, g: i8, b: i8, a: i8 }

begin_drawing        := func(): void external("BeginDrawing")
clear_background     := func(color: Color): void external("ClearBackground")
close_window         := func(): void external("CloseWindow")
draw_circle          := func(center_x: i32, center_y: i32, radius: f32, color: Color): void external("DrawCircle")
draw_circle_lines    := func(center_x: i32, center_y: i32, radius: f32, color: Color): void external("DrawCircleLines")
draw_texture_pro     := func(tex: Texture, source: Rectangle, dest: Rectangle, origin: Vector2, rotation: f32, tint: Color): void external("DrawTexturePro")
end_drawing          := func(): void external("EndDrawing")
init_window          := func(width: i32, height: i32, title: cstring): void external("InitWindow")
load_texture         := func(file_name: cstring): Texture external("LoadTexture")
set_target_fps       := func(fps: i32): void external("SetTargetFPS")
take_screenshot      := func(file_name: cstring): void external("TakeScreenshot")
unload_texture       := func(t: Texture): void external("UnloadTexture")
wait_time            := func(seconds: f64): void external("WaitTime")
window_should_close  := func(): bool external("WindowShouldClose")
