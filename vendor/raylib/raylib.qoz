link "./libraylib.a"
link "framework:IOKit"
link "framework:Cocoa"
link "framework:OpenGL"

Image := struct {
    data:    *void,
    width:   i32,
    height:  i32,
    mipmaps: i32,
    format:  i32,
}

Color := struct {
    r: i8,
    g: i8,
    b: i8,
    a: i8,
}

init_window          := func(width: i32, height: i32, title: *i8): void external("InitWindow")
close_window         := func(): void external("CloseWindow")
begin_drawing        := func(): void external("BeginDrawing")
end_drawing          := func(): void external("EndDrawing")
clear_background     := func(color: Color): void external("ClearBackground")
draw_circle          := func(centerX: i32, centerY: i32, radius: f32, color: Color): void external("DrawCircle")
take_screenshot      := func(fileName: *i8): void external("TakeScreenshot")
window_should_close  := func(): i32 external("WindowShouldClose")
wait_time            := func(seconds: f64): void external("WaitTime")